<% if(success.length> 0){ %>
    <div class="alert alert-success alert-dismissible fade show fixed-top w-50 mx-auto mt-3" role="alert">
        <%= success %>
    </div>
    <% } %>

        <% if(error.length> 0){ %>
            <div class="alert alert-danger alert-dismissible fade show  fixed-top w-50 mx-auto mt-3" role="alert">
                <%= error %>
            </div>
            <% } %>

                <script>
                    const alerts = document.querySelectorAll(".alert");
                    setTimeout(() => {
                        for (let alert of alerts) {
                            alert.remove();
                        }
                    }, 2000);
                </script>